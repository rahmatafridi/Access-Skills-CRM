<div class="modal fade" id="kt_modal_template" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Invite</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="kt-form kt-form--label-right">
                    <div class="form-group row">
                        <label for="recipient-name" class="col-form-label col-sm-2">First Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="AppInvite.api_firstname" v-bind:class="{ 'is-invalid': isSubmitted && $v.AppInvite.api_firstname.$invalid }">
                            <span v-if="isSubmitted && $v.AppInvite.api_firstname.$invalid" class="form-text text-danger">First name is required</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="recipient-name" class="col-form-label col-sm-2">Last Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="AppInvite.api_lastname" v-bind:class="{ 'is-invalid': isSubmitted && $v.AppInvite.api_lastname.$invalid }">
                            <span v-if="isSubmitted && $v.AppInvite.api_lastname.$invalid" class="form-text text-danger">Last name is required</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="recipient-name" class="col-form-label col-sm-2">Email:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="AppInvite.api_email" v-bind:class="{ 'is-invalid': isSubmitted && $v.AppInvite.api_email.$invalid }">
                            <span v-if="isSubmitted && $v.AppInvite.api_email.$invalid" class="form-text text-danger">Email is required</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="recipient-name" class="col-form-label col-sm-2">Password:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" v-model="AppInvite.api_password" v-bind:class="{ 'is-invalid': isSubmitted && $v.AppInvite.api_password.$invalid }">
                            <span v-if="isSubmitted && $v.AppInvite.api_password.$invalid" class="form-text text-danger">Password is required</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-sm-2">Course Level:</label>
                        <div class="col-sm-10">
                            <select id="ddl_CourseLevel2" class="form-control" v-model="AppInvite.api_id_courselevel" v-bind:class="{ 'is-invalid': isInviteSubmitted && $v.AppInvite.api_id_courselevel.$invalid }">
                                <option v-for="level in CourseLevel2" v-bind:value="level.CL_Id" v-text="level.CL_Title"></option>
                            </select>
                            <span v-if="isSubmitted && $v.AppInvite.api_id_courselevel.$invalid" class="form-text text-danger">Course level is required</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" v-on:click="AddEditAppInvite" class="btn btn-success">Submit</button>

                </div>
            </div>
        </div>
    </div>
</div>

