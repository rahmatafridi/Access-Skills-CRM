<!--begin::Document Modal-->
<div class="modal fade" id="kt_modal_document" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Document Upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="recipient-name" class="form-control-label">Name</label>
                    <input type="text" class="form-control" v-model="Document.Document_Name" v-bind:class="{ 'is-invalid': isDocumentSubmitted && $v.Document.Document_Name.$invalid }">
                    <span v-if="isDocumentSubmitted && $v.Document.Document_Name.$invalid" class="form-text text-danger">Document name is required</span>
                </div>
                @*<div class="form-group">
                    <label class="form-control-label">Category</label>
                    <select class="form-control " v-model="Document.Document_Id_Category"  v-bind:class="{ 'is-invalid': isDocumentSubmitted && $v.Document.Document_Id_Category.$invalid }">
                        <option v-for="(documentCat,index) in DocumentCategories" v-bind:selected="documentCat.description === 'Introduction'" v-bind:value="documentCat.id" v-text="documentCat.description"></option>
                    </select>
                    <span v-if="isDocumentSubmitted && $v.Document.Document_Id_Category.$invalid" class="form-text text-danger">Category is required</span>
                </div>*@
                <div class="form-group">
                    <label>File</label>
                    @*<div></div>*@
                    <div class="custom-file">
                        <partial name="~/Views/Shared/partials/fileUpload/_fileUpload.cshtml" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="message-text" class="form-control-label">Description</label>
                    <textarea class="form-control" v-model="Document.Document_Description" v-bind:class="{ 'is-invalid': isDocumentSubmitted && $v.Document.Document_Description.$invalid }"></textarea>
                    <span v-if="isDocumentSubmitted && $v.Document.Document_Description.$invalid" class="form-text text-danger">Description is required</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" v-on:click="submitDocument">Upload</button>
            </div>
        </div>

    </div>
</div>
<!--end::Document Modal-->