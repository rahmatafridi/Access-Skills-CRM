
@{ Layout = "~/Views/Shared/_Layout.cshtml";

    var permissions = (portal.models.RoleAdmin.Permissions)ViewBag.Permissions;


    var canCourseView = (permissions == null) ? false : (bool)permissions["COURSELEVEL_VIEW"];
    var canCourseEdit = (permissions == null) ? false : (bool)permissions["COURSELEVEL_EDIT"];
    var canCourseCreate = (permissions == null) ? false : (bool)permissions["COURSELEVEL_ADD"];
    var canCourseDel = (permissions == null) ? false : (bool)permissions["COURSELEVEL_DEL"];
    var level_Id = ViewBag.Level_Id;

}

<style>

    .form-group {
        margin-bottom: 1rem !important;
    }

    .link-text:hover {
        color: #22b9ff !important;
    }

    .kt-portlet .kt-portlet__foot {
        padding: 18px 10px 10px 0px !important;
    }

    .k-dropdown-wrap > .k-input, .k-dropdown .k-dropdown-wrap .k-select, .k-list, .k-reset {
        background-color: white;
    }
</style>


<div class="content" id="dv_Create_Course_Level">
    <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-form__actions kt-portlet__foot">
                <label id="lblEditHeader" style="font-size: large;font-weight: 500;margin-right: 5px">Add Course Level</label>
            </div>
            <div class="kt-portlet__head-toolbar">
                <a href="/Company/Manage" class="btn btn-clean kt-margin-r-10 btn-sm btn-outline-info">
                    <i class="la la-arrow-left"></i>
                    <span class="kt-hidden-mobile">Cancel</span>
                </a>
                <div class="btn-group">

                    &nbsp;
                    <button type="button" v-on:click="submitted(0)" class="btn btn-sm btn-brand">
                        <i class="la la-check"></i>
                        <span class="kt-hidden-mobile">Save</span>
                    </button>
                  
                </div>


            </div>
        </div>
        <section class="content">
            <div class="kt-portlet__body">
                <div class="row">
                    <div class="col-lg-4">
                        
                                    <div class="form-group">
                                        <label class="">Title</label>
                                        <input type="hidden" v-model="level.CL_Id" />
                                        <input type="text" class="form-control" v-model="level.CL_Title">
                                    </div>
                                    <div class="form-group">
                                        <label class="">Level</label>
                                        <input type="text" class="form-control" v-model="level.CL_Level">
                                    </div>

                              
                        
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="">Description</label>
                            <input type="text" class="form-control" v-model="level.CL_Description">
                        </div>
                        <div class="form-group">
                            <label class="">SortOrder</label>
                            <input type="text" class="form-control" v-model="level.CL_SortOrder">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="">Code</label>
                            <input type="text" class="form-control" v-model="level.CL_Code">
                        </div>
                    </div>
                </div>
                </div>
        </section>
    </div>
</div>

