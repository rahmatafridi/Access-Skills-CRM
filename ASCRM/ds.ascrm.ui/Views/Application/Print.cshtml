<body>
    <div id="dv_Manage_ApplicationPrint">

        <div class="text-center">
            <img src="~/Images/ApplicationPrint/Access Skills Logo.png" width="350" />
        </div>
        <div class="form-style-10">
            <h1>
                Online Application Form<span>
    Level : {{Course_Level}}
    @*<script>document.write(course_level);</script>*@
</span>
            </h1>
            <form>
                <div v-for="(appStep, index) in ApplicationSteps">
                    @*<div class="heading_section" v-text="index+1 + '. ' + appStep.as_title"><span v-text="index+1"></span></div>*@
                    <div class="heading_section"><span v-text="index+1"></span> {{appStep.as_title}}</div>
                    <div class="inner-wrap row">
                        <template v-for="appSection in appStep.applicationsections">
                            <template v-for="appQuestion in appSection.applicationquestions">

                                @*<div class="col-6 col-xs-6" v-if="appQuestion.q_type == 1">*@
                                <div v-if="appQuestion.q_type == 1" v-bind:class="appQuestion.q_class">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <input type="text" v-model="appQuestion.answer" readonly />
                                    </label>
                                </div>
                                <div class="form-group" v-if="appQuestion.q_type == 2">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <textarea class="form-control" v-model="appQuestion.answer" :id="appQuestion.q_mapname" :name="appQuestion.q_mapname" readonly></textarea>
                                    </label>
                                </div>
                                <div v-bind:class="appQuestion.q_class" v-if="appQuestion.q_type == 3">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <select class="form-control" v-model="appQuestion.answer" :id="appQuestion.q_mapname" :name="appQuestion.q_mapname" disabled>
                                            <option v-for="data in appQuestion.q_ddldata" v-bind:value="data.opt_value" v-text="data.opt_title"></option>
                                        </select>
                                    </label>
                                </div>
                                <div v-bind:class="appQuestion.q_class" v-if="appQuestion.q_type == 4">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <select class="form-control" v-model="appQuestion.answer" :id="appQuestion.q_mapname" :name="appQuestion.q_mapname" disabled>
                                            <option value="null">Please select</option>
                                            <option value="1">Yes</option>
                                            <option value="0">No</option>
                                        </select>
                                    </label>
                                </div>
                                <div v-bind:class="appQuestion.q_class" v-if="appQuestion.q_type == 5">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <input type="date" class="form-control" v-model="appQuestion.answer" :id="appQuestion.q_mapname" :name="appQuestion.q_mapname" readonly>
                                        @*<div class="input-group date">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="la la-calendar"></i>
                        </span>
                    </div>
                </div>*@
                                    </label>
                                </div>
                                <div v-bind:class="appQuestion.q_class" v-if="appQuestion.q_type == 6">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <input type="text" v-model="appQuestion.answer" readonly />
                                    </label>
                                </div>

                                <div v-bind:class="appQuestion.q_class" v-if="appQuestion.q_type == 7">
                                    <label>
                                        <span v-text="appQuestion.q_title"></span>
                                        <input type="text" v-model="appQuestion.answer" readonly />
                                    </label>
                                </div>
                                <div class="form-group inputstyle" v-if="appQuestion.q_type == 8">
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <label v-text="appQuestion.q_title"></label>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-control">
                                                <label style="margin-bottom: 15px;" class="kt-checkbox kt-checkbox--bold kt-checkbox--success">
                                                    <input type="checkbox" v-model="appQuestion.answer"  :id="appQuestion.q_mapname" :name="appQuestion.q_mapname" disabled>
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>


                            </template>
                        </template>
                    </div>
                </div>
                <div class="heading_section"><span>P</span>Privacy Notice</div>
                <div class="inner-wrap">

                    <label>
                        You may be contacted after you have completed your programme of learning to establish your employed circumstances or if you have further training or education requirements.
                        <br />

                        <input type="checkbox" name="chk_mktg_ContactConsent" :checked="Application.app_mktg_contactconsent == 1" disabled>&nbsp;&nbsp;Yes
                        &nbsp;&nbsp;<input type="checkbox" name="chk_mktg_ContactConsentNo" :checked="Application.app_mktg_contactconsent != 1" disabled>&nbsp;&nbsp;No

                        <br />
                    </label>
                </div>
                <div class="heading_section"><span>S</span>Signature</div>
                <div class="inner-wrap row">
                    <label></label>
                    <p></p>

                    <div class="col-12 col-xs-12">
                        <div class="col-6 col-xs-6">
                            <p>Print Name: <span v-text="Application.app_printname"></span></p><br />
                            @*<p><img id="signature" height="60px" src='[!lit_app_signature!]' alt="signature.png" /></p>*@
                            <p><img id="signature" height="60px" :src="app_signature" alt="signature.png" /></p>
                        </div>
                        <div class="col-6 col-xs-6">
                            <p>Date: <span v-text="Application.app_applicationdate"></span></p><br />
                        </div>
                    </div>
                </div>
                <div class="heading_section"><span>o</span>Office Use Only</div>

                <div class="inner-wrap row">
                    <div class="col-3 col-xs-3">
                            <label> Proof ID Seen <input type="text" name="field1" class=""  /></label>
                        </div>

                        <div class="col-3 col-xs-3">
                            <label> ID Type <input type="text" name="field1" class=""  /></label>
                        </div>

                        <div class="col-3 col-xs-6">
                            <label> Reference ID <input type="text" name="field1" class=""  /></label>
                        </div>

                    <div class="col-12 col-xs-12">
                        <div class="col-6 col-xs-6">
                            <p>Access Skills  </p>
                            <p><img id="signature_accessskills" height="70px" src='data:image/png;base64,' alt="signature_accessskills.png" /></p>
                        </div>
                        <div class="col-6 col-xs-6">
                            <p>Date: </p>
                        </div>

                    </div>

                </div>
                

                <!--Starts For Logos-->
                <div class="inner-wrap row" style="background-color: white !important;">

                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/Highfield logo.png" />
                    </div>
                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/pearson-edexcel-approved-centre_fw_3-300x225.png" />
                    </div>
                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/ILM-LOGO.jpg" />
                    </div>

                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/Endorsed provider (until Apr-19).jpg" />
                    </div>
                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/matrix.png" />
                    </div>

                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/Apprenticeship Logo.png" />
                    </div>
                    <div class="dv_logo">
                        <img src="~/Images/ApplicationPrint/ESF Updated.png" />
                    </div>
                </div>
                <!--Ends For Logos-->
            </form>
        </div>

    </div>

