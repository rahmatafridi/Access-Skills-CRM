<script>
    function showPersonalInformation() {

        $("#userPersonalInfo").css({ 'display': 'block' });
        $("#divChangePassword").css({ 'display': 'none' });
        $("#divSettings").css({ 'display': 'none' });

        $("#lnk_PersonalInformation").addClass(".kt-widget__item kt-widget__item--active");
        $("#lnk_ChangePassword").removeClass("kt-widget__item--active");
        $("#lnk_Settings").removeClass("kt-widget__item--active");
    }

    function showChangePassword() {

        $("#userPersonalInfo").css({ 'display': 'none' });
        $("#divChangePassword").css({ 'display': 'block' });
        $("#divSettings").css({ 'display': 'none' });

        $("#lnk_PersonalInformation").removeClass("kt-widget__item--active");
        $("#lnk_ChangePassword").addClass(".kt-widget__item kt-widget__item--active");
        $("#lnk_Settings").removeClass("kt-widget__item--active");
    }

    function showSettings() {
        $("#userPersonalInfo").css({ 'display': 'none' });
        $("#divChangePassword").css({ 'display': 'none' });
        $("#divSettings").css({ 'display': 'block' });

        $("#lnk_PersonalInformation").removeClass("kt-widget__item--active");
        $("#lnk_ChangePassword").removeClass("kt-widget__item--active");
        $("#lnk_Settings").addClass(".kt-widget__item kt-widget__item--active");
    }
</script>
