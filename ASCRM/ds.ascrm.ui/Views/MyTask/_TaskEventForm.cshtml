@{ Layout = string.Empty; }

@model ds.portal.tasks.TaskEventViewModel

@Html.HiddenFor(x => x.EventID)

<div id="WarningWell" class="alert alert-danger" role="alert" style="display: none;">
</div>
<div class="form-group row">
    <label asp-for="Title" class="col-sm-3 col-form-label">Activity</label>
    <div class="col-sm-9">
        <input asp-for="Title" class="form-control" disabled placeholder="Activity">
    </div>
</div>
<div class="form-group row">
    <label asp-for="Description" class="col-sm-3 col-form-label">Scheduled with</label>
    <div class="col-sm-9">
        <input asp-for="Description" class="form-control" placeholder="Scheduled with...">
    </div>
</div>
<div class="form-group row">
    <label asp-for="Start" class="col-sm-3 col-form-label">Date/Time</label>
    <div class="col-sm-9">
        @(Html.Kendo().DateTimePicker()
                .Name("Start")
                .Enable(true)
                .Format("dd/MM/yyyy HH:mm")
                .Value(Model.Start)
                .HtmlAttributes(new { style = "width: 100%", title = "Date/Time" })
                .DateInput()
            )
    </div>
</div>
